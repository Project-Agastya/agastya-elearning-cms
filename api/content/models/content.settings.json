{
  "kind": "collectionType",
  "collectionName": "contents",
  "info": {
    "name": "content"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": false
    },
    "url": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "subTopic": {
      "model": "sub-topic",
      "via": "contents"
    },
    "level": {
      "type": "enumeration",
      "enum": [
        "basic",
        "intermediary",
        "advanced"
      ],
      "required": true
    },
    "language": {
      "type": "string",
      "required": true
    },
    "audience": {
      "type": "enumeration",
      "enum": [
        "student",
        "teacher",
        "both"
      ],
      "required": true,
      "default": "student"
    },
    "classes": {
      "collection": "class"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "pdf",
        "youtube",
        "word",
        "scorm"
      ],
      "required": true,
      "default": "youtube"
    }
  }
}
