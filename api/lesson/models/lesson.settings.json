    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "Name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "Description": {
      "type": "text"
    },
    "Content": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "YoutubeUrl": {
      "type": "string"
    },
    "AnimationUrl": {
      "type": "string"
    },
    "Sequence": {
      "type": "integer",
      "required": true,
      "unique": true
    },
    "Exercises": {
      "collection": "exercise"
    }
  }
}
